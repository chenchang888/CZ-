page {
  background-color: #f3f7fa;
}
.details_header {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.details_header .details_title {
  width: 100%;
  text-align: justify;
  font-size: 44rpx;
  font-weight: 550;
  color: #222;
}
.details_header .details_from {
  display: flex;
  justify-content: start;
  line-height: 60rpx;
  color: #888;
  font-size: 28rpx;
}
.details_header .details_from .details_unit {
  margin-right: 65rpx;
}
.details_wrap {
  padding: 20rpx;
  margin-bottom: 100rpx;
}
.details_wrap .details_content {
  padding: 18rpx 0;
  border-top: 1rpx solid var(--baseRgb);
}
.details_wrap .details_content rich-text {
  line-height: 48rpx;
  font-size: 34rpx;
  color: #555;
  text-align: justify;
}
.details_wrap .details_content .richImg {
  max-width: 100%;
  height: auto;
}
.details_wrap .details_relation {
  margin-top: 15rpx;
}
.details_wrap .details_relation .details_enclosure {
  margin-top: 32rpx;
}
.details_wrap .details_relation .details_enclosure .enclosure_font {
  font-size: 34rpx;
  color: var(--themeColor);
}
.details_wrap .details_relation .details_enclosure .enclosure_title {
  margin-top: 13rpx;
  line-height: 48rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 30rpx;
  color: var(--titleColor);
}
.details_wrap .details_relation .details_enclosure .unscramble_title {
  margin-top: 13rpx;
  line-height: 48rpx;
  font-size: 30rpx;
  color: var(--titleColor);
}
.details_wrap .like_sharing {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 42rpx;
  margin-top: 10rpx;
  border-top: 1rpx solid var(--baseRgb);
  border-bottom: 1rpx solid var(--baseRgb);
}
.details_wrap .like_sharing .like {
  display: flex;
  justify-content: center;
  align-items: center;
  border: none;
}
.details_wrap .like_sharing .like .like_img {
  margin-right: 18rpx;
}
.details_wrap .like_sharing .like .like_img image {
  width: 36rpx;
  height: 40rpx;
}
.details_wrap .like_sharing .like .like_img .img_share {
  width: 29rpx;
  height: 33rpx;
}
.details_wrap .like_sharing .like .like_number {
  font-size: 28rpx;
  color: #999;
}
.details_wrap .like_sharing .like .like_color {
  color: var(--themeColor);
}
.details_wrap .apply_btn {
  width: 460rpx;
  line-height: 60rpx;
  margin: 40rpx auto;
  border-radius: 30rpx;
  font-size: 34rpx;
  background-color: var(--themeColor);
  color: #fff;
}
.details_wrap .show {
  display: none;
}
.details_wrap .details_comment {
  padding-bottom: 10rpx;
}
.details_wrap .details_comment .comment_font {
  line-height: 39px;
  font-size: 34rpx;
  color: var(--titleColor);
}
.details_wrap .details_comment .comment_container {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.details_wrap .details_comment .comment_container .comment_img image {
  width: 100rpx;
  height: 89rpx;
  margin-bottom: 32rpx;
}
.details_wrap .details_comment .comment_container .comment_tips {
  line-height: 38rpx;
  color: #999;
}
.details_wrap .details_comment .comment_item {
  margin-bottom: 20rpx;
}
.details_wrap .details_comment .comment_item .comment_name {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}
.details_wrap .details_comment .comment_item .comment_name .personal_img {
  margin-right: 10rpx;
}
.details_wrap .details_comment .comment_item .comment_name .personal_img image {
  width: 36rpx;
  height: 36rpx;
}
.details_wrap .details_comment .comment_item .comment_name .info_name {
  font-size: 32rpx;
}
.details_wrap .details_comment .comment_item .comment_content {
  color: #888;
}
.details_wrap .details_bottom {
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  width: 100%;
  padding: 20rpx;
  background-color: #fff;
}
.details_wrap .details_bottom .comment_input {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 355rpx;
  border-radius: 20rpx;
  background: #f3f7fa;
}
.details_wrap .details_bottom .comment_input textarea {
  width: 100%;
  height: 100%;
}
.details_wrap .details_bottom .bottom_right {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.details_wrap .details_bottom .bottom_right .comment_btn {
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin-left: 20rpx;
  border-radius: 10rpx;
  color: #fff;
  background-color: var(--themeColor);
}
.details_wrap .details_bottom .bottom_right .comment_img {
  display: flex;
  align-items: center;
}
.details_wrap .details_bottom .bottom_right .comment_img image {
  width: 45rpx;
  height: 45rpx;
  margin-left: 80rpx;
}
.details_wrap .details_bottom .bottom_right .share_img {
  border: none;
}
.details_wrap .details_bottom .bottom_right .share_img image {
  width: 40rpx;
  height: 45rpx;
  margin-left: 10rpx;
}
